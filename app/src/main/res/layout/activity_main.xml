<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/register_background"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:fitsSystemWindows="true"
        android:background="#8000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤"
            android:textColor="#fff"
            android:textSize="40sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"/>
        <EditText
            android:id="@+id/register_sno"
            android:maxLines="1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="账号"
            android:digits="1234567890"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/register_passward"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/register_ok"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="登     陆"
                android:textSize="30sp"
                android:textColor="#fff"
                android:background="#00BFFF"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp">
            <CheckBox
                android:id="@+id/register_mind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="#fff"/>
            <CheckBox
                android:id="@+id/register_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登陆"
                android:layout_alignParentRight="true"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="登陆即代表阅读服务条款"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
